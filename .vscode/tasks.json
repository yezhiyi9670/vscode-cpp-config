{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "cpp, temp",
			"type": "process",
			"command": "node",
			"args": [
				"${workspaceFolder}/.vscode/compiler-agent/cpp-compile.js",
				"${file}",
				"${workspaceFolder}/.vscode/debug-temp/a.exe"
			],
			"options": {
				"cwd": "${workspaceFolder}/.vscode/"
			},
			"group": {
				"kind": "build"
			},
			"presentation": {
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
			},
			"problemMatcher": "$gcc"
		},
		{
			"label": "cpp, generate",
			"type": "process",
			"command": "node",
			"args": [
				"${workspaceFolder}/.vscode/compiler-agent/cpp-compile.js",
